<h1>String Calculator</h1>

<%= form_with url: calculate_path, local: true do |form| %>
  <div>
    <%= form.label :numbers, "Enter numbers:" %>
    <%= form.text_field :numbers %>
  </div>
  <div>
    <%= form.submit "Calculate" %>
  </div>
<% end %>

<% if @result.present? %>
  <h2>Result: <%= @result %></h2>
<% elsif @error.present? %>
  <h2>Error: <%= @error %></h2>
<% end %>
